generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id        String        @id @default(uuid())
  email     String        @unique @db.VarChar(255)
  name      String        @db.VarChar(255)
  password  String        @db.VarChar(255)
  role      UserRoles     @default(user)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  banned    BanningStatus @default(notBanned)
  posts     Post[]        // Relation vers tous les posts créés par l'utilisateur
  likes     Like[]        // Relation vers tous les likes faits par l'utilisateur
}

model Post {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  user      Users    @relation(fields: [userId], references: [id])
  content   String   @db.VarChar(1000)
  createdAt DateTime @default(now())
  likesCount Int      @default(0)
  comments  Int      @default(0)
  likedBy   Like[]   // Relation vers tous les likes reçus par le post
}

model Like {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  user      Users    @relation(fields: [userId], references: [id])
  postId    String   @map("post_id")
  post      Post     @relation(fields: [postId], references: [id])
  createdAt DateTime @default(now())
}

enum UserRoles {
  admin
  user
}

enum BanningStatus {
  banned
  notBanned
}
